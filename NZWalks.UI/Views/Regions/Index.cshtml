@model IEnumerable<NZWalks.UI.Models.DTO.RegionDTO>


<h1 class="=mt-3">
    Regions
</h1>

<div class="d-flex justify-content-end">
    <a class="btn  btn-secondary" asp-controller="Regions" asp-action="Add"> 
      Add Region
    </a>
</div>
<table class="table table-border">
    <thead>
        <th>Id</th>
        <th>Code</th>
        <th>Name</th>
    </thead>
    <tbody>
        @foreach (var walk in Model)
        {
            <tr>
                <td>@walk.Id</td>
                <td>@walk.Code</td>
                <td>@walk.name</td>
            </tr>
        }
    </tbody>
</table>
