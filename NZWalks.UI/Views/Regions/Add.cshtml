@model NZWalks.UI.Models.AddRegionViewModel
@{

}

<h1>Add Region</h1>
<form action="" method="post">
    <div class="mt-3">
        <label for="" class="form-label">Code:</label>
        <input type="text" name="Code" id="inpcode" class="form-control" asp-for="Code">
    </div>
    <div class="mt-3">
        <label for="" class="form-label">Name:</label>
        <input type="text" name="Name" id="inpName" class="form-control" asp-for="Name">
